{{>header}}
{{>nav}}
<section class="my-5 container">
    <div class="row mb-3 justifiy-content-end">
        <a href="/add" class="btn btn-primary col-2">Add New User</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Name</th>
                <th>Initial Balance</th>
                <th>remaining Balance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#if isEmpty}}
             <tr class="alert alert-danger">
                <td colspan="3" class="text-center">users Not Found</td>
            </tr>
            {{else}}
              {{#each users}}
            <tr>
                <td>{{this.accNum}}</td>
                <td>{{this.name}}</td>
                <td>{{this.iBalance}}</td>
                <td>{{this.rBalance}}</td>
                <td>
                    <a href="/show/{{this.accNum}}" class="btn btn-primary mx-2">Show</a>
                    <a href="/edit/{{this.accNum}}" class="btn btn-warning mx-2">Edit</a>
                    <a href="/delete/{{this.accNum}}" class="btn btn-danger mx-2">Delete</a>
                    <a href="/addOp/{{this.accNum}}" class="btn btn-info mx-2">Add Operation</a>
                </td>
            </tr>
            {{/each}}
            {{/if}}
          
           
        </tbody>
    </table>
</section>
{{>footer}}